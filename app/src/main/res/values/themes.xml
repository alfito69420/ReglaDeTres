<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.ReglaDeTres" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="NoActionBar" parent="MyLightTheme.DayNight.NoActionBar"/>  Sin ActionBar

    <style name="MyLightTheme.DayNight.NoActionBar" parent="MyLightTheme.DayNight">  Sin ActionBar
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="MyLightTheme.DayNight" parent="Base.MyTheme"/>

    <style name="Base.MyTheme" parent="Base.MaterialThemeBuilder">
        <item name="colorPrimary">@color/light_color_primary</item>
        <item name="colorPrimaryVariant">@color/light_color_primary_variant</item>
        <item name="colorSecondary">@color/light_color_secondary</item>
        <item name="colorSecondaryVariant">@color/light_color_secondary_variant</item>

        <item name="android:colorBackground">@color/light_color_background</item>
        <item name="colorSurface">@color/light_color_surface</item>
        <item name="colorError">@color/light_color_error</item>

        <item name="colorOnPrimary">@color/light_color_on_primary</item>
        <item name="colorOnSecondary">@color/light_color_on_secondary</item>
        <item name="colorOnBackground">@color/light_color_on_background</item>
        <item name="colorOnSurface">@color/light_color_on_surface</item>
        <item name="colorOnError">@color/light_color_on_error</item>
    </style>

    <style name="Base.MaterialThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?colorPrimaryVariant</item>
        <!--<item name="android:navigationBarColor">?colorPrimaryVariant</item>-->
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>
        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">false</item>

        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <!--<item name="colorAccent">?colorSecondary</item>-->
    </style>

</resources>